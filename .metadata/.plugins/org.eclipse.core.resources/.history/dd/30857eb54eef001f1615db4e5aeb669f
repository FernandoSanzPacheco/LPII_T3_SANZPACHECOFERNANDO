    <!-- Bootstrap 5.3.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

	<script>
	       document.getElementById("medicoForm").addEventListener("submit", function(event) {
	           event.preventDefault(); // Evita el envío inmediato del formulario

	           // Obtener la fecha del campo de entrada
	           const fechaInput = document.getElementById("fechanacimt3").value;
	           const fechaLocal = new Date(fechaInput);
			   
			   // Crear una nueva fecha con un día sumado
			   const fechaLocalConDiaSumado = new Date(fechaLocal);
			   fechaLocalConDiaSumado.setDate(fechaLocal.getDate() + 2);

	           // Convertir la fecha a UTC
	           const fechaUTC = new Date(
	               Date.UTC(
	                   fechaLocal.getFullYear(),
	                   fechaLocal.getMonth(),
	                   fechaLocal.getDate()
	               )
	           );

	           // Formatear la fecha como ISO 8601 con zona horaria
	           const fechaISO = fechaUTC.toISOString().split('T')[0]; //obtiene solo la fecha.

	           // Asignar la fecha UTC formateada al campo oculto del formulario
	           document.getElementById("fechanacimt3").value = fechaISO;

	           // Enviar el formulario
	           this.submit();
	       });
	   </script>
	
